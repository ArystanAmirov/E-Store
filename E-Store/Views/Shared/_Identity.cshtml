@inject UserManager<ApplicationUser> UserManager; 

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
}
else
{

    @*User profile section*@
    <div class="rectangle-outline-primary">
        <div class="rectangle-content">
            <i class="bi bi-person-badge"></i> @UserManager.GetUserName(User)
        </div>
    </div>

    <style>
        .rectangle-outline-primary {
            border: 1px solid #007bff;
            padding: 6px;
            display: inline-block;
        }

        .rectangle-content {
            display: inline-block;
            vertical-align: middle;
        }
    </style>

    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-right"></i> Log out
        </button>
    </form>
}

